<Window x:Class="AaDS_Project.PersonSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="PersonSettings" Height="125" Width="132" Closed="PersonSettings_Closed">
    <Grid>
        <TextBox x:Name="NameBox" Text="Имя" Width="118" Height="20" Margin="0,0,0,0" HorizontalAlignment="Left"
                 VerticalAlignment="Top" Foreground="DimGray" GotFocus="NameBox_GotFocus" LostFocus="NameBox_LostFocus" />
        <ComboBox x:Name="TimeBox" Width="118" Height="20" Margin="0,22,0,0" HorizontalAlignment="Left"
                  VerticalAlignment="Top" SelectionChanged="TimeBox_SelectionChanged" />
        <ComboBox x:Name="PlaceBox" Width="118" Height="20" Margin="0,44,0,0" HorizontalAlignment="Left"
                  VerticalAlignment="Top" SelectionChanged="PlaceBox_SelectionChanged" />
        <!-- <Button x:Name="SaveButton" Content="Save" Width="118" Height="20" Margin="0,66,0,0" -->
        <!--         HorizontalAlignment="Left" VerticalAlignment="Top" /> -->

    </Grid>
</Window>