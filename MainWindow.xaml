<Window x:Class="AaDS_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="App" Height="600" Width="900" Loaded="MainWindow_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="DarkBlue" BorderThickness="4" Grid.Column="1">
            <Canvas x:Name="cvs" MouseWheel="cvs_MouseWheel" MouseDown="cvs_MouseDown" MouseMove="cvs_MouseMove" MouseUp="cvs_MouseUp" Grid.Column="1" Background="White" Width="auto" Height="auto"/>
        </Border>
        <Border BorderBrush="DarkBlue" BorderThickness="4" Grid.Column="0">
            <DockPanel Grid.Column="0" Background="LightSkyBlue">
                <StackPanel/>
            </DockPanel>

        </Border>
    </Grid>
</Window>